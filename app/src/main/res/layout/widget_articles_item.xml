<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/widget_article_item_vertical_margin"
    android:layout_marginTop="@dimen/widget_article_item_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/widget_list_item_horizontal_padding"
        android:paddingStart="@dimen/widget_list_item_horizontal_padding"
        android:paddingRight="@dimen/widget_list_item_horizontal_padding"
        android:paddingEnd="@dimen/widget_list_item_horizontal_padding">

        <TextView
            android:id="@+id/widget_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/widget_article_title_text_size"
            android:contentDescription="@string/widget_article_title_description"
            tools:text="Eagles Win the SuperBowl!" />

        <TextView
            android:id="@+id/widget_article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/widget_list_item_horizontal_margin_start"
            android:layout_marginLeft="@dimen/widget_list_item_horizontal_margin_start"
            android:paddingEnd="@dimen/widget_list_item_horizontal_margin_end"
            android:paddingLeft="@dimen/widget_list_item_horizontal_margin"
            android:paddingRight="@dimen/widget_list_item_horizontal_margin_end"
            android:paddingStart="@dimen/widget_list_item_horizontal_margin"
            android:textSize="@dimen/widget_article_date_text_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="end|center_vertical"
            android:contentDescription="@string/widget_article_date_description"
            tools:text="2-3-18" />
    </LinearLayout>
</FrameLayout>